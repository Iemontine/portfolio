{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "types": [
            "vite/client",
            "vitest/globals",
            "node"
        ]
    },
    "include": [
        "src",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "plugins",
        "public"
    ]
}